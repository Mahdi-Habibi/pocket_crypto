TELEGRAM_BOT_TOKEN=your-telegram-token
# Enable webhook mode (required for Vercel/serverless)
USE_WEBHOOK=true
# Base URL for your webhook (e.g., https://<project>.vercel.app or ngrok https URL)
WEBHOOK_BASE_URL=https://your-domain.example.com
# Path for the webhook endpoint. Default is /api/webhook (Vercel)
WEBHOOK_PATH=/api/webhook
# Local port for webhook server (used only when running main.py directly)
PORT=8080
